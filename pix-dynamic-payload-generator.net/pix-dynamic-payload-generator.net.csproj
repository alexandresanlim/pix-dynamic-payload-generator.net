<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <RootNamespace>pix_dynamic_payload_generator.net</RootNamespace>
    <Version>1.0.23</Version>
    <Authors>Alexandre Sanlim</Authors>
    <Description>Auxilia na geração de QRCodes dinâmicos para pagamentos com PIX (Sistema de pagamento instantâneo do Banco Central do Brasil).</Description>
    <PackageProjectUrl>https://github.com/alexandresanlim/pix-dynamic-payload-generator.net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/alexandresanlim/pix-dynamic-payload-generator.net</RepositoryUrl>
    <PackageTags>pix,brasil,brazil,qr,code,pagamento</PackageTags>
    <UserSecretsId>4c002251-3090-4c5b-8cd5-8cc1066297b0</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="pix-payload-generator.net" Version="1.0.19-pre-release" />
  </ItemGroup>

  <ItemGroup>
    <None Update="certificado.p12">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
